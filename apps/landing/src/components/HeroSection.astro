---
import type { Translations, Lang } from '../i18n/translations';
import { HeroMockup } from './HeroMockup';

interface Props {
  t: Translations['hero'];
  lang: Lang;
  platformUrl: string;
}

const { t, platformUrl } = Astro.props;
---

<section class="relative overflow-hidden pt-32 pb-20 md:pt-40 md:pb-32">
  <!-- Background effects -->
  <div class="pointer-events-none absolute inset-0 overflow-hidden">
    <div class="absolute -top-40 right-0 h-[700px] w-[700px] rounded-full bg-gradient-to-bl from-cyan-500/8 to-transparent blur-3xl"></div>
    <div class="absolute -bottom-20 -left-20 h-[600px] w-[600px] rounded-full bg-gradient-to-tr from-purple-500/8 to-transparent blur-3xl"></div>
    <!-- Dot grid -->
    <div
      class="absolute inset-0 opacity-[0.04] dark:opacity-[0.07]"
      style="background-image: radial-gradient(circle at 1px 1px, currentColor 1px, transparent 0); background-size: 32px 32px;"
    ></div>
  </div>

  <div class="relative mx-auto max-w-7xl px-4 md:px-6">
    <div class="flex flex-col items-center text-center">
      <!-- Badge -->
      <div class="mb-6 inline-flex items-center rounded-full border border-zinc-200 dark:border-zinc-800 bg-white/60 dark:bg-zinc-900/60 px-4 py-1.5 text-xs font-medium text-zinc-500 dark:text-zinc-400 backdrop-blur-sm opacity-0 animate-fade-in-up" style="animation-delay: 0s; animation-fill-mode: forwards;">
        <svg class="mr-1.5 h-3 w-3 text-cyan-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
        </svg>
        The social platform for developers
      </div>

      <!-- Headline -->
      <h1 class="hero-line-1 text-5xl font-black tracking-tight text-zinc-900 dark:text-zinc-100 md:text-7xl lg:text-8xl leading-none">
        {t.titleLine1}
      </h1>
      <h1 class="hero-line-2 text-5xl font-black tracking-tight md:text-7xl lg:text-8xl leading-none gradient-text">
        {t.titleLine2}
      </h1>

      <!-- Subtitle -->
      <p class="hero-subtitle mx-auto mt-6 max-w-2xl text-base text-zinc-500 dark:text-zinc-400 md:text-lg">
        {t.subtitle}
      </p>

      <!-- CTA buttons -->
      <div class="hero-ctas mt-8 flex flex-wrap items-center justify-center gap-3">
        <a
          href={`${platformUrl}/signup`}
          class="inline-flex items-center gap-2 h-12 px-8 rounded-xl bg-gradient-to-r from-cyan-500 to-purple-600 text-white font-semibold text-base shadow-xl shadow-cyan-500/25 hover:from-cyan-600 hover:to-purple-700 hover:scale-105 hover:shadow-cyan-500/40 transition-all"
        >
          {t.cta}
          <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M13 7l5 5m0 0l-5 5m5-5H6" />
          </svg>
        </a>
        <a
          href="#features"
          class="inline-flex items-center h-12 px-8 rounded-xl border border-zinc-300 dark:border-zinc-700 bg-white/60 dark:bg-zinc-900/50 text-zinc-700 dark:text-zinc-300 font-semibold text-base backdrop-blur-sm hover:border-zinc-400 dark:hover:border-zinc-600 hover:bg-white dark:hover:bg-zinc-900 transition-all"
        >
          {t.ctaSecondary}
        </a>
      </div>

      <!-- Trust badges -->
      <div class="hero-trust mt-5 flex flex-wrap items-center justify-center gap-4 text-xs text-zinc-400">
        {[t.trustFree, t.trustNoCard, t.trustOpenSource].map((item) => (
          <span class="flex items-center gap-1.5">
            <svg class="h-3.5 w-3.5 text-cyan-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
            </svg>
            {item}
          </span>
        ))}
      </div>

      <!-- App mockup -->
      <div class="mt-16 w-full">
        <HeroMockup client:visible />
      </div>
    </div>
  </div>
</section>
