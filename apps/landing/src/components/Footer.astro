---
import type { Translations, Lang } from '../i18n/translations';

interface Props {
  t: Translations['footer'];
  lang: Lang;
}

const { t } = Astro.props;

const productLinks = [
  { label: t.features, href: '#features' },
  { label: t.leaderboard, href: '#leaderboard' },
  { label: t.playground, href: '#', soon: true },
  { label: t.aiAssistant, href: '#', soon: true },
];

const resourceLinks = [
  { label: t.docs, href: '#', soon: true },
  { label: t.blog, href: '#', soon: true },
  { label: t.api, href: '#', soon: true },
  { label: t.status, href: '#', soon: true },
];

const companyLinks = [
  { label: t.about, href: '#', soon: true },
  { label: t.privacy, href: '#' },
  { label: t.terms, href: '#' },
  { label: t.contact, href: '#' },
];
---

<footer class="border-t border-zinc-200 dark:border-zinc-800/60 bg-zinc-950">
  <div class="mx-auto max-w-7xl px-4 md:px-6">
    <!-- Main grid -->
    <div class="grid gap-10 py-16 md:grid-cols-2 lg:grid-cols-4">
      <!-- Brand -->
      <div class="lg:col-span-1">
        <a href="/" class="flex items-center gap-2 w-fit group">
          <div class="flex h-8 w-8 items-center justify-center rounded-lg bg-gradient-to-br from-cyan-500 to-purple-600 shadow-md">
            <svg class="h-4 w-4 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1" />
            </svg>
          </div>
          <span class="font-bold text-zinc-100">CommitCamp</span>
        </a>
        <p class="mt-3 text-sm text-zinc-500 leading-relaxed max-w-[200px]">{t.tagline}</p>
        <div class="mt-5 flex gap-3">
          <a
            href="https://github.com"
            target="_blank"
            rel="noopener noreferrer"
            class="flex h-9 w-9 items-center justify-center rounded-lg bg-zinc-800 text-zinc-400 hover:bg-zinc-700 hover:text-zinc-100 transition-colors"
            aria-label="GitHub"
          >
            <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
            </svg>
          </a>
          <a
            href="https://twitter.com"
            target="_blank"
            rel="noopener noreferrer"
            class="flex h-9 w-9 items-center justify-center rounded-lg bg-zinc-800 text-zinc-400 hover:bg-zinc-700 hover:text-zinc-100 transition-colors"
            aria-label="Twitter / X"
          >
            <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24">
              <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z" />
            </svg>
          </a>
        </div>
      </div>

      <!-- Product -->
      <div>
        <h3 class="mb-4 text-xs font-semibold uppercase tracking-widest text-zinc-400">{t.product}</h3>
        <ul class="space-y-3">
          {productLinks.map(({ label, href, soon }) => (
            <li>
              <a href={href} class="flex items-center gap-2 text-sm text-zinc-500 hover:text-zinc-300 transition-colors">
                {label}
                {soon && <span class="text-[9px] px-1.5 py-0.5 rounded-full bg-zinc-800 text-zinc-600 font-medium">{t.comingSoon}</span>}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Resources -->
      <div>
        <h3 class="mb-4 text-xs font-semibold uppercase tracking-widest text-zinc-400">{t.resources}</h3>
        <ul class="space-y-3">
          {resourceLinks.map(({ label, href, soon }) => (
            <li>
              <a href={href} class="flex items-center gap-2 text-sm text-zinc-500 hover:text-zinc-300 transition-colors">
                {label}
                {soon && <span class="text-[9px] px-1.5 py-0.5 rounded-full bg-zinc-800 text-zinc-600 font-medium">{t.comingSoon}</span>}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Company -->
      <div>
        <h3 class="mb-4 text-xs font-semibold uppercase tracking-widest text-zinc-400">{t.company}</h3>
        <ul class="space-y-3">
          {companyLinks.map(({ label, href, soon }) => (
            <li>
              <a href={href} class="flex items-center gap-2 text-sm text-zinc-500 hover:text-zinc-300 transition-colors">
                {label}
                {soon && <span class="text-[9px] px-1.5 py-0.5 rounded-full bg-zinc-800 text-zinc-600 font-medium">{t.comingSoon}</span>}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <!-- Bottom bar -->
    <div class="flex flex-col items-center justify-between gap-3 border-t border-zinc-800/60 py-6 text-xs text-zinc-600 sm:flex-row">
      <span>{t.copyright}</span>
      <span>{t.madeWith}</span>
    </div>
  </div>
</footer>
