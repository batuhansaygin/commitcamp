---
import type { Translations, Lang } from '../i18n/translations';
import { FeaturesGrid } from './FeatureCard';

interface Props {
  t: Translations['features'];
  lang: Lang;
}

const { t } = Astro.props;
---

<section id="features" class="py-24 md:py-32">
  <div class="mx-auto max-w-7xl px-4 md:px-6">
    <!-- Header -->
    <div class="mb-16 text-center">
      <h2 class="text-3xl font-bold tracking-tight text-zinc-900 dark:text-zinc-100 md:text-4xl lg:text-5xl">
        {t.title}
      </h2>
      <p class="mt-3 text-zinc-500 dark:text-zinc-400 md:text-lg max-w-2xl mx-auto">
        {t.subtitle}
      </p>
    </div>

    <!-- Feature cards grid (React island) -->
    <FeaturesGrid t={t} client:visible />
  </div>
</section>
